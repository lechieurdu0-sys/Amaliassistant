{
  "Application": {
    "Name": "Amaliassistant",
    "Version": "1.0.0",
    "Description": "Overlay de sites web pour Windows",
    "Author": "Amaliassistant Team",
    "Website": "https://github.com/amaliassistant",
    "Support": "https://github.com/amaliassistant/issues"
  },
  "Installation": {
    "DefaultPath": "%LOCALAPPDATA%\\Amaliassistant",
    "RequiresAdmin": false,
    "MinWindowsVersion": "10.0.17763",
    "Architecture": "x64",
    "Prerequisites": {
      "DotNetVersion": "8.0.0",
      "WebView2Runtime": true,
      "MinDiskSpace": "500MB"
    }
  },
  "Features": {
    "SiteBubbles": true,
    "ChildBubbles": true,
    "NotesBubbles": false,
    "CalculatorBubbles": false,
    "CircularPositioning": true,
    "GroupMovement": true,
    "OpacityControl": true,
    "SizeControl": true,
    "AutoStart": false
  },
  "UI": {
    "DefaultOpacity": 0.8,
    "DefaultSize": 1.0,
    "MinSize": 0.5,
    "MaxSize": 2.0,
    "ChildBubbleSize": 0.5,
    "MaxChildBubbles": 6,
    "CircularRadius": 80
  },
  "Performance": {
    "HighDpiMode": "PerMonitorV2",
    "ProcessPriority": "BelowNormal",
    "WebView2Args": [
      "--no-sandbox",
      "--disable-web-security",
      "--disable-features=VizDisplayCompositor",
      "--disable-gpu-sandbox",
      "--disable-software-rasterizer",
      "--disable-background-timer-throttling",
      "--disable-backgrounding-occluded-windows",
      "--disable-renderer-backgrounding",
      "--disable-field-trial-config",
      "--process-priority=below-normal",
      "--disable-background-networking"
    ]
  },
  "Logging": {
    "Enabled": true,
    "Level": "Information",
    "MaxFileSize": "10MB",
    "MaxFiles": 5,
    "Path": "logs"
  },
  "Security": {
    "AllowExternalUrls": true,
    "BlockedDomains": [],
    "AllowedDomains": [],
    "RequireHttps": false
  }
}
