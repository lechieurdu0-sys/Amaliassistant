<!-- Aperçu visuel du template pour édition dans Visual Studio -->
<!-- ⚠️ IMPORTANT: Ce fichier est UNIQUEMENT pour la prévisualisation Visual Studio -->
<!-- 
    UTILISATION:
    ============
    1. Modifiez ce fichier dans Visual Studio Designer pour voir vos changements en temps réel
    2. Après modification, synchronisez manuellement vers PlayerStatsTemplate.xaml
       (voir les instructions dans PlayerStatsTemplate.xaml)
    
    AJOUTER DES IMAGES:
    ==================
    Format de référence:
    Source="/GameOverlay.Kikimeter;component/Resources/Assets/VotreDossier/mon_image.png"
    
    IMPORTANT:
    - Les images doivent être dans GameOverlay.Kikimeter/Resources/Assets/
    - Elles doivent être déclarées comme <Resource> dans GameOverlay.Kikimeter.csproj
    - Ensuite, copiez la référence dans PlayerStatsTemplate.xaml
      et remplacez par un binding si nécessaire: {Binding PropertyName}
-->

<UserControl x:Class="GameOverlay.Kikimeter.Views.PlayerStatsTemplatePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="481.5" Foreground="{x:Null}" Height="124">
    <UserControl.Resources>
        <SolidColorBrush x:Key="CyanAccentBrush" Color="#FF00BFFF" />
        <SolidColorBrush x:Key="SectionBackgroundBrush" Color="#20000000" />
    </UserControl.Resources>

    <!-- Prévisualisation du template avec des données d'exemple -->
    <Grid Background="Transparent" HorizontalAlignment="Left" Width="809" Height="125" VerticalAlignment="Top">
        <Border
                BorderThickness="1" 
                Margin="243,0,322,0"
                Padding="3,3,6,3"
                CornerRadius="2"
                VerticalAlignment="Top"
                MinWidth="200"
                MaxWidth="400" Height="129">
            <StackPanel Margin="-2,-4,-1,1">
                <!-- Nom du joueur avec icône de classe -->
                <Grid x:Name="breed_nom_dpt"
                      Margin="0,-1,0,0"
                      HorizontalAlignment="Left"
                      MinWidth="190"
                      MaxWidth="400"
                      Width="Auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="/GameOverlay.Kikimeter;component/Views/EndTurnWidgetBackground.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Icône de classe (exemple) -->
                    <Border Grid.Column="0"
                            Height="28"
                            Width="28"
                            Margin="2,0,4,0"
                            VerticalAlignment="Center">
                        <Image x:Name="breed" Source="/GameOverlay.Kikimeter;component/Resources/Assets/Classes/8.png"
                               Stretch="UniformToFill"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" 
                               Height="22" 
                               Width="22"/>
                    </Border>
                    <!-- Nom du joueur -->
                    <TextBlock x:Name="nom_du_joueur"
                               Text="JoueurExemple" 
                               FontWeight="Bold" 
                               FontSize="12"
                               Foreground="#FFA07C58"
                               VerticalAlignment="Center"
                               Grid.Column="1"
                               Margin="2,0,6,0"
                               Height="22"/>
                    <TextBlock x:Name="DPT" Text="DPT: 1500" 
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#FFFF7979" 
                           Grid.Column="2"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                </Grid>

                <!-- DPT -->

                <!-- Grille pour gérer toutes les progress bars -->
                <Grid Margin="0,-5,0,0" Height="100" Width="234" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Canvas pour les images et les Grid de progress bars - permet le positionnement précis -->
                    <Canvas x:Name="kikimeter" Grid.Column="0" 
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
                            ClipToBounds="False" Margin="-1,0,119,4" Width="235" Height="95">
                        <Canvas.Background>
                            <ImageBrush ImageSource="/GameOverlay.Kikimeter;component/Views/EndTurnWidgetBackground.png"/>
                        </Canvas.Background>

                        <!-- Dégâts infligés - aligné avec l'image dégâts (centre à -12.5 + 22.5 = 10px) -->
                        <Grid x:Name="progressbar_dégat" Canvas.Left="35"
                              Canvas.Top="3"
                              Width="200"
                              Height="9" 
                              Margin="-6.5,5,0,0"
                              Panel.ZIndex="0">
                            <Grid.Background>
                                <SolidColorBrush Color="#FFA6906F" Opacity="0.53"/>
                            </Grid.Background>
                            <ProgressBar 
                                 Value="0.75" 
                                 Maximum="1" 
                                 Foreground="#FFF16000"
                                 Background="#40000000"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center" 
                                 Height="12"
                                 Panel.ZIndex="0">
                                <ProgressBar.BorderBrush>
                                    <SolidColorBrush Color="#FF7D775B" Opacity="0.535"/>
                                </ProgressBar.BorderBrush>
                            </ProgressBar>
                            <TextBlock Text="7500" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Panel.ZIndex="1"/>
                            <Image x:Name="overlay_dégat"
                               Margin="-4,-6,-2.2,-7"
                               Source="/GameOverlay.Kikimeter;component/Views/xp_progress_bar.png"
                               Stretch="Fill"
                               Panel.ZIndex="2"
                               Tag="progressbar_dégat"/>
                        </Grid>

                        <!-- Image overlay Dégâts infligés - au-dessus de la progress bar, en dessous de l'image dégâts -->

                        <!-- Dégâts subis - aligné avec l'image dégâts reçus (centre à 10.5 + 22.5 = 33px) -->
                        <Grid x:Name="progressbar_dégat_reçut" Canvas.Left="35"
                              Canvas.Top="26"
                              Width="200"
                              Height="11" 
                              Margin="-6.5,4,0,0"
                              Panel.ZIndex="0">
                            <ProgressBar 
                                 Value="0.5" 
                                 Maximum="1"
                                 Height="12" 
                                 Foreground="#FFC01B01"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 Panel.ZIndex="0">
                                <ProgressBar.BorderBrush>
                                    <SolidColorBrush Color="#FFA6906F" Opacity="0.5"/>
                                </ProgressBar.BorderBrush>
                                <ProgressBar.Background>
                                    <SolidColorBrush Color="#40000000" Opacity="0.5"/>
                                </ProgressBar.Background>
                            </ProgressBar>
                            <TextBlock Text="5000" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Panel.ZIndex="1"/>
                            <Image x:Name="overlay_dégat_reçut"
                               Margin="-10,-5,-2.4,-5"
                               Source="/GameOverlay.Kikimeter;component/Views/xp_progress_bar.png"
                               Stretch="Fill"
                               Panel.ZIndex="2"
                               Tag="progressbar_dégat_reçut"/>
                        </Grid>

                        <!-- Image overlay Dégâts subis - au-dessus de la progress bar, en dessous de l'image dégâts reçus -->

                        <!-- Image Dégâts subis - liée à progressbar_dégat_reçut (en dessous de dégâts) -->
                        <Image x:Name="dégats_reçut"
                               Source="/GameOverlay.Kikimeter;component/Views/StatSlots11.png"
                               Width="45"
                               Height="45"
                               Canvas.Left="-5"
                               Canvas.Top="8.5"
                               RenderTransformOrigin="0.5,0.5" 
                               Margin="0,7,0,0"
                               Panel.ZIndex="3"
                               Tag="progressbar_dégat_reçut"/>

                        <!-- Image Dégâts infligés - liée à progressbar_dégat (au-dessus de dégâts reçus) -->
                        <Image x:Name="dégats"
                               Source="/GameOverlay.Kikimeter;component/Views/StatSlots08.png"
                               Width="45"
                               Height="45"
                               Canvas.Left="-5"
                               Canvas.Top="-15.5"
                               RenderTransformOrigin="0.5,0.5" 
                               Margin="0,9,0,0"
                               Panel.ZIndex="4"
                               Tag="progressbar_dégat"/>

                        <!-- Bouclier donné - aligné avec l'image bouclier (centre à 33.5 + 22.5 = 56px) -->
                        <Grid x:Name="progressbar_bouclier" Canvas.Left="35"
                              Canvas.Top="49"
                              Width="200"
                              Height="10" 
                              Margin="-6.5,4,0,0"
                              Panel.ZIndex="0">
                            <ProgressBar 
                                 Value="0.25" 
                                 Maximum="1"
                                 Height="12" 
                                 Foreground="#FF2CCA85"
                                 Background="#40000000"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 Panel.ZIndex="0">
                                <ProgressBar.BorderBrush>
                                    <SolidColorBrush Color="#FFA6906F" Opacity="0.5"/>
                                </ProgressBar.BorderBrush>
                            </ProgressBar>
                            <TextBlock Text="2500" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Panel.ZIndex="1"/>
                            <Image x:Name="overlay_bouclier"
                               Margin="-4,-6,-2.4,-6"
                               Source="/GameOverlay.Kikimeter;component/Views/xp_progress_bar.png"
                               Stretch="Fill"
                               Panel.ZIndex="2"
                               Tag="progressbar_bouclier"/>
                        </Grid>

                        <!-- Image overlay Bouclier donné - au-dessus de la progress bar, en dessous de l'image bouclier -->

                        <!-- Image Bouclier donné - liée à progressbar_bouclier -->
                        <Image x:Name="bouclier"
                               Source="/GameOverlay.Kikimeter;component/Views/StatSlots01.png"
                               Width="45"
                               Height="45"
                               Canvas.Left="-5"
                               Canvas.Top="22.5"
                               RenderTransformOrigin="0.5,0.5" 
                               Margin="0,15,0,0"
                               Panel.ZIndex="3"
                               Tag="progressbar_bouclier"/>

                        <!-- Soins prodigués - aligné avec l'image soins (centre à 56.5 + 22.5 = 79px) -->
                        <Grid x:Name="progressbar_soins" Canvas.Left="35"
                              Canvas.Top="72"
                              Width="201"
                              Height="10" 
                              Margin="-7,3,0,0"
                              Panel.ZIndex="0">
                            <ProgressBar 
                                 Value="0.15" 
                                 Maximum="1"
                                 Height="13" 
                                 Foreground="#FFFB5F5D"
                                 Background="#40000000"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 Panel.ZIndex="0">
                                <ProgressBar.BorderBrush>
                                    <SolidColorBrush Color="#FFB5B385" Opacity="0.5"/>
                                </ProgressBar.BorderBrush>
                            </ProgressBar>
                            <TextBlock Text="1500" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Panel.ZIndex="1"/>
                            <Image x:Name="overlay_soins"
                               Margin="-4,-6,-2.4,-6"
                               Source="/GameOverlay.Kikimeter;component/Views/xp_progress_bar.png"
                               Stretch="Fill"
                               Panel.ZIndex="2"
                               Tag="progressbar_soins"/>
                        </Grid>

                        <!-- Image overlay Soins prodigués - au-dessus de la progress bar, en dessous de l'image soins -->

                        <!-- Image Soins prodigués - liée à progressbar_soins -->
                        <Image x:Name="Soins"
                               Source="/GameOverlay.Kikimeter;component/Views/StatSlots07.png"
                               Width="45"
                               Height="45"
                               Canvas.Left="-5"
                               Canvas.Top="32.5"
                               RenderTransformOrigin="0.5,0.5" 
                               Margin="0,27,0,0"
                               Panel.ZIndex="3"
                               Tag="progressbar_soins"/>
                    </Canvas>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
