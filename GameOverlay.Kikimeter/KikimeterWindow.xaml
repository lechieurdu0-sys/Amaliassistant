                    </Border.Style>
                    <Image x:Name="MainCollapseArrowCollapsed"
                           Source="/GameOverlay.Kikimeter;component/Views/Assets/kikimeter/deploiement.png"
                           Width="20"
                           Height="20"
                           Stretch="Fill"
                           Opacity="1.0"
                           RenderTransformOrigin="0.5,0.5" Cursor="Hand" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <Image.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Image.RenderTransform>
                    </Image>
                </Border>
            </Canvas>

            <!-- Statut du combat en bas -->
            <Border Grid.Row="3" 
                   BorderThickness="0,1,0,0"
                   Padding="0"
                   Visibility="Collapsed">
                <TextBlock x:Name="CombatStatusText"
                          Text="En attente de combat..."
                          FontSize="11"
                          FontWeight="Normal"
                          HorizontalAlignment="Left"
                           VerticalAlignment="Center" Foreground="{x:Null}"/>
            </Border>
        </Grid>
    </Border>
</Window>
