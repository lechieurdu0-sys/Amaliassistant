<Window x:Class="GameOverlay.Windows.WebWindowStyleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Configuration du style - Fenêtre Web"
        Height="450"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FF2A2A2A">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Titre -->
        <TextBlock Grid.Row="0" 
                   Text="Personnaliser le style de la fenêtre Web" 
                   Foreground="White" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>
        
        <!-- Contenu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Opacité de la fenêtre -->
                <GroupBox Header="Opacité de la fenêtre" Foreground="White" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <Slider x:Name="WindowOpacitySlider"
                               Minimum="0.1" 
                               Maximum="1.0" 
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="WindowOpacitySlider_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="WindowOpacityText" 
                                  Text="100%" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Opacité du contenu WebView2 -->
                <GroupBox Header="Opacité du contenu Web" Foreground="White" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <Slider x:Name="ContentOpacitySlider"
                               Minimum="0.1" 
                               Maximum="1.0" 
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="ContentOpacitySlider_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="ContentOpacityText" 
                                  Text="100%" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Style de la fenêtre -->
                <GroupBox Header="Style de la fenêtre" Foreground="White" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <!-- Fond de la fenêtre -->
                        <CheckBox x:Name="BackgroundEnabledCheckBox"
                                 Content="Activer le fond de la fenêtre"
                                 Foreground="White"
                                 Margin="0,0,0,10"
                                 Checked="BackgroundEnabledCheckBox_Changed"
                                 Unchecked="BackgroundEnabledCheckBox_Changed"/>
                        
                        <StackPanel x:Name="BackgroundColorPanel" Margin="20,0,0,10">
                            <TextBlock Text="Couleur de fond:" Foreground="White" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="BackgroundColorTextBox"
                                        Grid.Column="0"
                                        Text="#FF1A1A1A"
                                        Foreground="White"
                                        Background="#FF3A3A3A"
                                        BorderBrush="#FF5A5A5A"
                                        Margin="0,0,5,0"
                                        KeyDown="BackgroundColorTextBox_KeyDown"/>
                                <Button Grid.Column="1"
                                       Content="Choisir"
                                       Padding="10,5"
                                       Click="ChooseBackgroundColor_Click"/>
                            </Grid>
                            <TextBlock Text="Opacité du fond:" Foreground="White" Margin="0,10,0,5"/>
                            <Slider x:Name="BackgroundOpacitySlider"
                                   Minimum="0.0" 
                                   Maximum="1.0" 
                                   TickFrequency="0.1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="BackgroundOpacitySlider_ValueChanged"
                                   Margin="0,0,0,5"/>
                            <TextBlock x:Name="BackgroundOpacityText" 
                                      Text="100%" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Couleur de la barre de titre -->
                        <TextBlock Text="Couleur de la barre de titre:" Foreground="White" Margin="0,10,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TitleBarColorTextBox"
                                    Grid.Column="0"
                                    Text="#FF2A2A2A"
                                    Foreground="White"
                                    Background="#FF3A3A3A"
                                    BorderBrush="#FF5A5A5A"
                                    Margin="0,0,5,0"
                                    KeyDown="TitleBarColorTextBox_KeyDown"/>
                            <Button Grid.Column="1"
                                   Content="Choisir"
                                   Padding="10,5"
                                   Click="ChooseTitleBarColor_Click"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,15,0,0">
            <Button Content="Annuler" 
                   Padding="20,5"
                   Margin="0,0,10,0"
                   Click="CancelButton_Click"/>
            <Button Content="OK" 
                   Padding="20,5"
                   Click="OkButton_Click"
                   IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>



