<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <None Remove="EndTurnWidgetBackground.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GameOverlay.Models\GameOverlay.Models.csproj" />
    <ProjectReference Include="..\GameOverlay.Windows\GameOverlay.Windows.csproj" />
    <ProjectReference Include="..\GameOverlay.Kikimeter\GameOverlay.Kikimeter.csproj" />
    <ProjectReference Include="..\GameOverlay.Themes\GameOverlay.Themes.csproj" />
    <ProjectReference Include="..\GameOverlay.UpdateInstaller\GameOverlay.UpdateInstaller.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <OutputItemType>Content</OutputItemType>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="10.0.0" />
    <PackageReference Include="System.Windows.Forms" Version="4.0.0" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <EnableXamlDesigner>true</EnableXamlDesigner>
    <AssemblyTitle>Amaliassistant</AssemblyTitle>
    <AssemblyProduct>Amaliassistant</AssemblyProduct>
    <AssemblyCompany>Amaliassistant</AssemblyCompany>
    <AssemblyDescription>Overlay de sites web pour jeux - OptimisÃƒÂ© Windows 11</AssemblyDescription>
    <AssemblyVersion>1.9.0.5</AssemblyVersion>
    <FileVersion>1.9.0.5</FileVersion>
    <ApplicationIcon>Amalia.ico</ApplicationIcon>
    <ApplicationHighDpiMode>PerMonitorV2</ApplicationHighDpiMode>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="background.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="icon.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Amalia.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="EndTurnWidgetBackground.png" />
  </ItemGroup>

  <Target Name="CopyUpdateInstaller" AfterTargets="Publish">
    <ItemGroup>
      <UpdateInstallerFiles Include="$(SolutionDir)GameOverlay.UpdateInstaller\bin\$(Configuration)\net8.0-windows\win-x64\GameOverlay.UpdateInstaller.exe" />
      <UpdateInstallerFiles Include="$(SolutionDir)GameOverlay.UpdateInstaller\bin\$(Configuration)\net8.0-windows\GameOverlay.UpdateInstaller.exe" />
      <UpdateInstallerFiles Include="$(SolutionDir)GameOverlay.UpdateInstaller\bin\$(Configuration)\net8.0\GameOverlay.UpdateInstaller.exe" />
    </ItemGroup>
    <Copy SourceFiles="@(UpdateInstallerFiles)" DestinationFolder="$(PublishDir)" Condition="Exists('%(UpdateInstallerFiles.Identity)')" />
    <Message Text="Copie de UpdateInstaller vers $(PublishDir)" Condition="Exists('%(UpdateInstallerFiles.Identity)')" />
  </Target>

</Project>
