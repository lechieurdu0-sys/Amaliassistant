<Window x:Class="GameOverlay.App.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise à jour d'Amaliassistant" 
        Height="300" 
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Titre -->
        <TextBlock Grid.Row="0" 
                   Text="Mise à jour en cours..." 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>
        
        <!-- Message d'état -->
        <TextBlock x:Name="StatusText" 
                   Grid.Row="1" 
                   Text="Préparation de la mise à jour..." 
                   FontSize="14" 
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
        
        <!-- Barre de progression -->
        <ProgressBar x:Name="ProgressBar" 
                     Grid.Row="2" 
                     Height="25" 
                     Margin="0,0,0,10"
                     Minimum="0" 
                     Maximum="100" 
                     Value="0"
                     IsIndeterminate="False"/>
        
        <!-- Pourcentage -->
        <TextBlock x:Name="ProgressText" 
                   Grid.Row="3" 
                   Text="0%" 
                   FontSize="12" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <!-- Détails (taille téléchargée, vitesse, etc.) -->
        <TextBlock x:Name="DetailsText" 
                   Grid.Row="4" 
                   Text="" 
                   FontSize="11" 
                   Foreground="Gray"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,0,0,10"/>
        
        <!-- Bouton Annuler (uniquement pendant le téléchargement) -->
        <Button x:Name="CancelButton" 
                Grid.Row="5" 
                Content="Annuler" 
                Width="100" 
                Height="30"
                HorizontalAlignment="Center"
                Click="CancelButton_Click"
                IsEnabled="True"/>
    </Grid>
</Window>











