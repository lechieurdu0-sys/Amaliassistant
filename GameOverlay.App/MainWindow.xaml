<Window x:Class="GameOverlay.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameOverlay"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseRightButtonDown="Window_MouseRightButtonDown"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <Canvas x:Name="MainCanvas" Background="Transparent"/>
    </Grid>
    
    <Window.ContextMenu>
        <ContextMenu>
            <!-- Menu "Ajouter" et "Opacité bulles" supprimés - fonctionnalité sites web retirée -->
            <MenuItem Header="Masquer l'overlay" Click="HideOverlay_Click"/>
            <Separator/>
            <MenuItem Header="📍 Placer notification de vente" Click="TestSaleNotification_Click"/>
            <Separator/>
            <MenuItem Header="Quitter" Click="Exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
</Window>