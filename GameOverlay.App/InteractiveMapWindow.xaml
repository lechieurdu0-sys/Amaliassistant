<Window x:Class="GameOverlay.App.InteractiveMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        Title="Carte interactive Wakfu" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize" 
        Topmost="True"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="True"
        MinWidth="600"
        MinHeight="400">
    <Window.Resources>
        <ImageBrush x:Key="WindowBackgroundBrush" ImageSource="/EndTurnWidgetBackground.png" Stretch="Fill"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/EndTurnWidgetBackground.png" Stretch="Fill"/>
    </Window.Background>
    <Border
            BorderThickness="1"
            BorderBrush="#FF6E5C2A"
            CornerRadius="10"
            Padding="0"
            SnapsToDevicePixels="True"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid Margin="0" Background="{StaticResource WindowBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte avec titre et bouton fermer -->
            <Grid Grid.Row="0" Margin="0,10,1,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- IcÃ´ne de dÃ©placement -->
                <Image Grid.Column="0"
                       Source="/GameOverlay.Kikimeter;component/Views/Assets/kikimeter/croix_deplacement.png"
                       Width="20"
                       Height="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Cursor="SizeAll"
                       MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                       Stretch="Uniform" Margin="12,0,0,0"/>
                <TextBlock Grid.Column="1"
                           Text="ðŸ—ºï¸ Carte interactive Wakfu"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#FF4E421F"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,40,0"/>
                <Image Grid.Column="2"
                       Source="/GameOverlay.Kikimeter;component/Views/Assets/utilities/fermeture.png"
                       Width="28"
                       Height="28"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Cursor="Hand"
                       MouseLeftButtonDown="CloseButton_Click"
                       Stretch="Uniform" Margin="0,5,0,0"/>
            </Grid>

            <!-- Conteneur du plugin carte -->
            <Border Grid.Row="1" 
                   BorderBrush="#FF6E5C2A" 
                   BorderThickness="1" 
                   CornerRadius="4"
                   Margin="15,0,15,15"
                   Background="Transparent">
                <ContentPresenter x:Name="MapContentPresenter" />
            </Border>

            <!-- Boutons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="0,0,15,15">
                <Button x:Name="ConfigureButton" 
                       Content="ðŸ“ Configurer le dossier" 
                       Width="180"
                       Height="35"
                       Click="ConfigureButton_Click"
                       Margin="0,0,10,0"
                       Background="#FF1C1F23"
                       Foreground="#FF6E5C2A"
                       BorderBrush="#FF6E5C2A"
                       BorderThickness="1"
                       Padding="10,5"
                       FontWeight="SemiBold"
                       FontSize="11"
                       Cursor="Hand"/>

                <Button x:Name="CloseWindowButton" 
                       Content="Fermer" 
                       Width="90"
                       Height="35"
                       Click="CloseButton_Click"
                       Background="#FF1C1F24"
                       Foreground="#FF6E5C2A"
                       BorderBrush="#FF6E5C2A"
                       BorderThickness="1"
                       Padding="10,5"
                       FontWeight="SemiBold"
                       FontSize="11"
                       Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>




